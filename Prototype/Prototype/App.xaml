<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Prototype"
             x:Class="Prototype.App">
    <Application.Resources>
        <ResourceDictionary>


            <!-- lets me colour my project globally, and fontsize etc by using the styles -->
            <Color x:Key="Primary">#E2CFEA</Color>
            <Color x:Key="PrimaryDark">#A06CD5</Color>
            <Color x:Key="Accent">#E2CFEA</Color>
            <Color x:Key="InputBackground">white</Color>
            <Color x:Key="ImportantBtn">#AC6CF0</Color>
            <Color x:Key="NormalBtn">#84A6F5</Color>

            <Color x:Key="LightBackground">#E2CFEA</Color>
            <Color x:Key="DarkBackground">#A06CD5</Color>


            <!-- this is what colours the background of my pages-->
            <Style TargetType="Page" ApplyToDerivedTypes="True">
                <Setter Property="BackgroundColor"
                        Value="{StaticResource LightBackground}" />
            </Style>




            <!-- this lets me size labels using mvvm-->
            <Style TargetType="Label" x:Key="BaseLabel">
                <Setter Property="FontFamily" Value="OpenSansRegular" />
                <Setter Property="TextColor" Value="#274472" />
            </Style>

            <!-- Basic label styling-->
            <Style x:Key="Textlbl" BasedOn="{StaticResource BaseLabel}" TargetType="Label">
                <Setter Property="FontSize" Value="16"/>
            </Style>

            <!-- Used for titles styling -->
            <Style x:Key="Title" BasedOn="{StaticResource BaseLabel}" TargetType="Label">
                <Setter Property="FontSize" Value="30"/>
                <Setter Property="FontAttributes" Value="Bold"/>

            </Style>

            <!-- this is for paymentinfo card inputs -->
            <Style x:Key="CardEntry" BasedOn="{StaticResource BaseLabel}" TargetType="Label">
                <Setter Property="FontSize" Value="16"/>

            </Style>
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
