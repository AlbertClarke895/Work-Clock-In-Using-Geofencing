<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Prototype.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Prototype"
    xmlns:views="clr-namespace:Prototype.Views"
     
    Shell.FlyoutBehavior="Flyout"
    Title="Prototype">
    
    <!-- this lets me navigate to these pages using the top left corner -->
    <ShellContent Title="Home" Route="home" ContentTemplate="{DataTemplate views:LoginPage}" />
    <ShellContent Title="Settings" Route="settings" ContentTemplate="{DataTemplate views:Settings}" />
    <ShellContent Title="GroupHomePage" Route="GroupHomePage" ContentTemplate="{DataTemplate views:GroupHomePage}" />

</Shell>
