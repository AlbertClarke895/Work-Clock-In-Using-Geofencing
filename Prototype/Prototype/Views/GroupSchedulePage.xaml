<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prototype.Views.GroupSchedulePage"
             Title="Schedule">

    <Grid RowDefinitions="Auto, *, Auto"
          BackgroundColor="{StaticResource PrimaryDark}">

        <!-- Top bar -->
        <Grid Grid.Row="0"
              HeightRequest="70"
              Padding="15"
              ColumnDefinitions="Auto, *, Auto, Auto"
              VerticalOptions="Start">

            <!-- Profile icon -->
            <Image Source="dotnet_bot.png" 
                   WidthRequest="30"
                   HeightRequest="30"
                   Grid.Column="0" />

            <!-- Settings icon -->
            <Button Text="Settings" 
                    WidthRequest="80" 
                    HeightRequest="30" 
                    Grid.Column="3" 
                    BackgroundColor="{StaticResource ImportantBtn}"/>
        </Grid>

        <!-- Weekly schedule -->
        <Grid Grid.Row="1" Padding="20">
            <Border BackgroundColor="{StaticResource Accent}" 
                    Stroke="{StaticResource ImportantBtn}" 
                    StrokeThickness="2" 
                    Padding="15">

                <VerticalStackLayout Spacing="15">
                    <!-- Schedule title -->
                    <Label Text="Weekly Schedule" 
                           FontSize="22" 
                           FontAttributes="Bold" 
                           TextColor="White" 
                           HorizontalOptions="Center"/>

                    <!-- Schedule table -->
                    <VerticalStackLayout Spacing="10">
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="Monday:" TextColor="White" FontSize="16"/>
                            <Label Text="9:30 AM - 5:30 PM" TextColor="White" FontSize="16" FontAttributes="Bold"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="10">
                            <Label Text="Tuesday:" TextColor="White" FontSize="16"/>
                            <Label Text="9:30 AM - 5:30 PM" TextColor="White" FontSize="16" FontAttributes="Bold"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="10">
                            <Label Text="Wednesday:" TextColor="White" FontSize="16"/>
                            <Label Text="9:30 AM - 5:30 PM" TextColor="White" FontSize="16" FontAttributes="Bold"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="10">
                            <Label Text="Thursday:" TextColor="White" FontSize="16"/>
                            <Label Text="9:30 AM - 5:30 PM" TextColor="White" FontSize="16" FontAttributes="Bold"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="10">
                            <Label Text="Friday:" TextColor="White" FontSize="16"/>
                            <Label Text="9:30 AM - 5:30 PM" TextColor="White" FontSize="16" FontAttributes="Bold"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </VerticalStackLayout>

            </Border>
        </Grid>

        <!-- Bottom navigation -->
        <Grid Grid.Row="2"
              HeightRequest="80"
              ColumnDefinitions="*, *, *"
              Padding="20">

            <Button Text="Statistics"
                    Grid.Column="0"
                    Clicked="Statistics_Clicked"
                    BackgroundColor="{StaticResource NormalBtn}" />

            <Button Text="Home"
                    Grid.Column="1"
                    Clicked="HomeBtn_Clicked"
                    BackgroundColor="{StaticResource NormalBtn}"/>

            <Button Text="Schedule"
                    Grid.Column="2"
                    Clicked="Schedule_Clicked"
                    BackgroundColor="{StaticResource ImportantBtn}"/>
        </Grid>

    </Grid>
</ContentPage>
