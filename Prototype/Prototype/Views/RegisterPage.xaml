<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prototype.Views.RegisterPage"
             Title="RegisterPage">
    <VerticalStackLayout Margin="15" Padding="30, 60, 30, 30" Spacing="25">

        <StackLayout Spacing="2" BackgroundColor="{StaticResource Primary}" HorizontalOptions="Fill">
            <Label x:Name="lblText"  Text="Register" Style="{StaticResource Title}" HorizontalOptions="Center" />
        </StackLayout>

        <StackLayout Spacing="2">
            <Label Text="Email" />
            <Entry x:Name="userName" Placeholder="Email" BackgroundColor="{StaticResource InputBackground}"/>
        </StackLayout>

        <StackLayout Spacing="2">
            <Label Text="Password" />
            <Entry x:Name="PasswordEntry" IsPassword="True" Placeholder="Password" BackgroundColor="{StaticResource InputBackground}"/>
        </StackLayout>

        <StackLayout Spacing="2">
            <Label Text="Confirm Password" />
            <Entry x:Name="ConfirmPasswordEntry" IsPassword="True" Placeholder="Confirm Password" BackgroundColor="{StaticResource InputBackground}"/>
        </StackLayout>

        <StackLayout Spacing="2">
            <Label Text="Phone Number" />
            <Entry x:Name="PhoneNumber" Placeholder="Phone Number" BackgroundColor="{StaticResource InputBackground}"/>
        </StackLayout>


        <Button x:Name="btnRegister"
            Text="Register"
            BackgroundColor="{StaticResource NormalBtn}"                
            Clicked="ConfirmRegisterButton_Clicked"
            Style="{StaticResource Textlbl}"            
            BorderWidth="2"
            BorderColor="Black"/>



    </VerticalStackLayout>
</ContentPage>
    
    
    